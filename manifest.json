{
    "manifest_version": 3,
    "name": "Hailuo Video Generator",
    "version": "1.1",
    "description": "Automates video generation on hailuoai.com/video and hailuo.ai/video",
    "permissions": [
      "activeTab",
      "storage",
      "tabs"
    ],
    "host_permissions": [
      "https://hailuoai.com/*",
      "https://hailuo.ai/*"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": [
          "https://hailuoai.com/video*",
          "https://hailuo.ai/video*"
        ],
        "js": ["content-script-loader.js"],
        "run_at": "document_idle"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["utils.js", "domInteractions.js", "storage.js", "content.js"],
        "matches": ["https://hailuoai.com/*", "https://hailuo.ai/*"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
}